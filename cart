 private int amount; 
   private int currentRow;
   Connection connection = null;
   Statement statement = null;
   ResultSet resultset = null;
   String query , URL, password,username;
 int total=0;
 int count=0;
   public Cart() {
                initComponents();
        ImageIcon logo =new ImageIcon(getClass().getResource("icon.jpg"));
        this.setIconImage(logo.getImage());
         doconnect();
    }
 public void doconnect(){
         try{
    URL ="jdbc:mysql://localhost:3306/shop";
    username="root";
    password="s1234";
    query="select * from cart";
    
    connection = DriverManager.getConnection(URL, username, password);
    statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);
    resultset = statement.executeQuery(query);
   
     while(resultset.next()){
        jTextArea1.setText(jTextArea1.getText()+" "+resultset.getString("name")
                +"  amount: "+resultset.getInt("amount")
                +"  cost: "+resultset.getInt("cost")+"\n");
        total=total+resultset.getInt("cost");
        count=count+resultset.getInt("amount");
     }
  jTextField2.setText(total+"");
  jTextField1.setText(count+" items ");
    }
    catch (SQLException ex){
    JOptionPane.showMessageDialog(this,ex);
    }
    }
