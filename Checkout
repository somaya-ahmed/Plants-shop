     public void doconnect(){
        try{
    URL ="jdbc:mysql://localhost:3306/shop";
    username="root";
    password="s1234";
    connection  = DriverManager.getConnection(URL, username, password);
    statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);
    query="select * from login where id=(select max(id) from login);";
    resultset=statement.executeQuery(query);
    resultset.next();
    e = resultset.getString("Email");
  
  PreparedStatement pstmt = connection.prepareStatement("select * from register where Email = ?");
     pstmt.setString(1,e);
    resultset=pstmt.executeQuery();
  /*  query="select * from register ";
    
   resultset=statement.executeQuery(query);*/
       resultset.next();
    
      
        jTextField1.setText(resultset.getString("Address"));
        jTextField2.setText(resultset.getString("FirstName"));
        jTextField3.setText(resultset.getString("LastName"));
        jTextField4.setText(resultset.getInt("Phone")+"");
        
        resultset.close();

    

    }
    catch (SQLException ex){
    JOptionPane.showMessageDialog(this,ex);
    }
    }

