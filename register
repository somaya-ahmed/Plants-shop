    private void jLabel8MouseClicked(java.awt.event.MouseEvent evt) {                                     
        LOGIN rf=new LOGIN();
        rf.setVisible(true);
        rf.pack();
        rf.setLocationRelativeTo(null);
        rf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.dispose();
    }                                    

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
   if(jTextFieldfirstname.getText().isEmpty()||jTextFieldlastname.getText().isEmpty()||    
  jPasswordField1.getText().isEmpty()||jTextFieldphone.getText().isEmpty()
           ||jTextFieldemail.getText().isEmpty()||jTextFieldaddress.getText().isEmpty())
       JOptionPane.showMessageDialog(this, "please fill the blank field");
   
   else{
    String firstname=jTextFieldfirstname.getText();
    String lastname=jTextFieldlastname.getText();

    int pass=Integer.parseInt(jPasswordField1.getText());
    int phone=Integer.parseInt(jTextFieldphone.getText());
    String email=jTextFieldemail.getText();
    String address=jTextFieldaddress.getText();
    
    String e= "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,6}$";
    Pattern em=Pattern.compile(e,Pattern.CASE_INSENSITIVE);
    Matcher m=em.matcher(email);
    try{
    //curntrow=resultSet.getRow();
//     jTextFieldfirstname.setText("");
//     jTextFieldlastname.setText("");
//    jTextFieldusername.setText("");
//    jTextFieldpassword.setText("");
//    jTextFieldrepass.setText("");
//    jTextFieldphone.setText("");
//    jTextFieldemail.setText("");
//    jTextFieldaddress.setText("");
    
    resultSet.moveToInsertRow();
    resultSet.updateString("FirstName",firstname );
    resultSet.updateString("LastName",lastname );
    //resultSet.updateString("UserName",username );
    resultSet.updateInt("Passwoord", pass);
    resultSet.updateInt("Phone", phone);
    if(m.find()){
    resultSet.updateString("Email",email);}
    else{JOptionPane.showMessageDialog(this, "The email format is wrong.");}
    resultSet.updateString("Address",address);
    resultSet.insertRow();
    resultSet.close();
    statement.close();
    statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,ResultSet.CONCUR_UPDATABLE);
    resultSet = statement.executeQuery(query);
    JOptionPane.showMessageDialog(this, "new user created successfully.");
    }
catch (SQLException ex){
JOptionPane.showMessageDialog(this, ex.getMessage());
}}
    }                                        

